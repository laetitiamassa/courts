
<% @courts.each do |court| %>					
	<% if court.loco_evaluation && court.loco_evaluation.evaluator == current_user %>
		<li class="list-group-item">
			<div class="row">
				<div class="col-xs-2 no-padding text-center">
					<% if court.loco_evaluation.evaluation == "happy" %>
			           <i class="fa fa-smile-o fa-3x fa-success"></i>
			      	<% elsif court.loco_evaluation.evaluation == "ok" %>
			            <i class="fa fa-meh-o fa-3x fa-warning"></i>
			      	<% else %>
			            <i class="fa fa-frown-o fa-3x fa-danger"></i>
			      	<% end %>
			    </div>
			    <div class="col-xs-7">

			      "<i><%= court.loco_evaluation.comment %></i>"
				  <div class="text-right"><small>(<%= t("courts.evaluation_about") %> <%= link_to court.loco_evaluatee.last_name_or_placeholder, court_path(court) %>)</small></div>	
				</div>
				
				<div class="col-xs-3">
					<%= link_to (image_tag (court.loco_evaluatee.avatar.url(:mini)), class: "img-circle"), user_path(court.loco_evaluatee) %>
				</div>
			</div>
		</li>	
	<% end %>
<% end %>


