<div class="container">
	<div class="col-md-4 col-md-offset-4">
	<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h1>Se connecter</h1>
      <h5 class="text-right"><small>
      	<%= link_to t("users.registration.not_signed_up_yet"), new_registration_path(resource_name) %>
      </small></h5>
    </div>
  </div>
  <div class="panel-body">

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  
		  <div class="form-group">
		  	<%= f.label :email %>
		  	<%= f.email_field :email, :placeholder => "email",class: "form-control", :autofocus => true %>
		  </div>

		  <div class="form-group">
		  	<%= f.label :password %>
		  	<%= f.password_field :password, :placeholder => t("home.password"), class: "form-control" %>
		  </div>

		    <div class="form-group">
		    	<div class="checkbox">
			    	<%= f.check_box :remember_me %>
			    	<%= f.label :remember_me, t("users.remember_me") %>
			    </div>
			  </div>


		  	<div class="form-group">
		  		<%= f.submit t("users.registration.sign_in"), class: "btn btn-primary" %>
		  	</div>
		<% end %>
	</div>
  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
</div>