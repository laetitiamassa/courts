
  <h2 class="text-center"><%= @court.performance %></h2>
  <h4 class="text-center"><%= @court.jurisdiction %>
    <br><small>
      <i class="fa fa-clock-o fa-lg grey"> </i>
        <%= l @court.date_display, :format => ('%e %b') %>
        <%= l @court.date_display, :format => ('%H:%M') %>
       
    <br><i class="fa fa-map-marker fa-lg grey"> </i>
      <%= t("bars.#{@court.bar}") %>
    </small>

    </h4>
 <div class="text-right shrinker">
  
</div>
       
     <hr>   

      <% unless @court.current %>
        <!-- evaluations -->
        <%= render "evaluations" %>
      
      <% else %>
      <div class="row">
          <div class="col-xs-2">
            <%= link_to (image_tag (@court.user.avatar.url(:rikiki)), class: "img-circle"), user_path(@court.user) %>
          </div>
          <div class="col-xs-4">
           <i>loco Me <%= link_to @court.user.last_name_or_placeholder, user_path(@court.user) %></i>
          </div>
          
          <div class="col-xs-6 text-right">
            <%= render "status_and_cta" %>
          </div>
  </div>
      <% end %>
