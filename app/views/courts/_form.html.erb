<%= form_for(@court) do |f| %>
  <% if @court.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@court.errors.count, t("error")) %> <%= t("courts.not_saved_error") %></h2>

      <ul>
      <% @court.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.datetime_select :date, {}, {class: "form-control input-lg"} %>
  </div>

  <div class="field form-group">
    <%= f.text_field :performance, :placeholder => t("courts.placeholder_performance"), class: "form-control input-lg" %>
  </div>
  <div class="field form-group">
    <%= f.text_field :jurisdiction, :placeholder => t("courts.placeholder_court"), class: "form-control input-lg" %>
  </div>
  
  <div class="field form-group">
    <%= f.select :bar, @bars, {:selected => params[:bar]}, {class: "form-control input-lg"} %>
  </div>
  <div class="field">
    <%= t("courts.found_loco") %>
    <%= f.check_box :have_found %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.submit t('courts.button_new_court'), :class => "btn btn-primary btn-lg" %>
  </div>
<% end %>
