<div class="col-md-8 col-md-offset-2">
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <div class="panel-title">
	    	<h1><%= t("courts.edit_title") %></h1>
	    </div>
	  </div>
	  <div class="panel-body">
			
	  	<%= form_for(@court) do |f| %>
  <% if @court.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@court.errors.count, "error") %> prohibited this court from being saved:</h2>

      <ul>
      <% @court.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.check_box :have_found %>
    <%= t("courts.i_found_loco") %>
  </div>
  <div class="field form-group form-inline">
    <%= f.datetime_select :date, {:order => [:day,:month,:year]}, {class: "form-control input-sm"} %>
  </div>

  <div class="field form-group">
    <%= f.text_field :performance, :placeholder => t("courts.placeholder_performance"), class: "form-control input-lg" %>
  </div>
  <div class="field form-group">
    <%= f.text_field :jurisdiction, :placeholder => t("courts.placeholder_court"), class: "form-control input-lg" %>
  </div>
  
  <div class="field form-group">
    <%= f.select :bar, @bars, {:include_blank => false}, {class: "form-control input-lg"} %>
  </div>
  
  <br>
  <div class="form-actions">
    <%= f.submit t("courts.button_edit_court"), :class => "btn btn-primary btn-lg" %>
  </div>
<% end %>

		</div>
		
	</div>
</div>
