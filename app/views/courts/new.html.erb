<div class="col-md-8 col-md-offset-2">
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <div class="panel-title">
	    	<h1>Nouvelle demande de remplacement</h1>
	    </div>
	  </div>
	    
	  <div class="panel-body">
			
	  	<%= form_for(@court) do |f| %>
  <% if @court.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@court.errors.count, "error") %> prohibited this court from being saved:</h2>

      <ul>
      <% @court.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.datetime_select :date, {:order => [:day,:month,:year]}, {class: "form-control input-lg"} %>
  </div>

  <div class="field form-group">
    <%= f.text_field :performance, :placeholder => "Prestation attendue (ex : demande de remise)", class: "form-control input-lg" %>
  </div>
  <div class="field form-group">
    <%= f.text_field :jurisdiction, :placeholder => "Juridiction concernée", class: "form-control input-lg" %>
  </div>
  
  <div class="field form-group">
    <%= f.text_field :bar, :placeholder => "Barreau dont relève la juridiction", class: "form-control input-lg" %>
  </div>
  
  <br>
  <div class="form-actions">
    <%= f.submit 'Nouvelle demande', :class => "btn btn-primary btn-lg" %>
  </div>
<% end %>

		</div>
		
	</div>
</div>


