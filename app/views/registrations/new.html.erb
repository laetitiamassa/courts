<div class="container">
	<div class="col-md-4 col-md-offset-4">
	<div class="panel panel-default">
  <div class="panel-heading">
    <h2><%= t("users.registration.signup_title") %></h2>
  </div>

  <div class="panel-body">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  	<%= devise_error_messages! %>

		  <div class="form-group">
		  	
		  	<%= f.email_field :email, :autofocus => true, :placeholder => "email", class: "form-control" %>
		  </div>

		  <div class="form-group">
		  	
		  	<%= f.password_field :password, :placeholder => t("home.password"), class: "form-control" %>
		  </div>

		  <div class="form-group">
		  	
		  	<%= f.password_field :password_confirmation, :placeholder => t("home.confirm_password"), class: "form-control" %>
		  </div>

		  <div class="form-group">
		  	<%= f.submit t("home.signup_free"), class: "btn btn-primary btn-block" %>
		  	<br><small><%= t("home.you_accept_terms") %><%= link_to t("home.our_terms"), legal_path %>)</small>
		  </div>
		<% end %>
	</div>

	<div class="panel-footer">
	<%= render "devise/shared/links" %>
	</div>
</div>
</div>
