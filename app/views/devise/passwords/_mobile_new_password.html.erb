<div class="splash">
    <div class="splash-filter text-center">
    	<%= link_to image_tag("courts_logo.png", :size => "125x50"), root_path %>
    	<h2 class="white reset-title-form-spacing"><%= t("users.password.reset_your_password") %></h2>

<div class="container">
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="form-group">
		  	
			  <%= f.email_field :email, :placeholder => t("users.password.email_placeholder") , class: "form-control input-lg form-opacity", :autofocus => true %>
			</div>

		  <div class="form-group">
		  	<%= f.submit t("users.password.send_me_reset_instructions"), class: "btn btn-primary btn-block" %>
		  </div>
		<% end %>
</div>

<div class="text-center white">
	<%= link_to t("users.registration.sign_up"), new_registration_path(resource_name), class: "white" %>
	 | <%= link_to t("users.registration.sign_in"), new_user_session_path, class: "white" %>
	</div>

</div>
</div>