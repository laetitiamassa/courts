<div class="row">
  <div class="col-md-3">
    <ul class="list-group">
        <%= link_to t("account.subscription"), account_path, class: "list-group-item" %>
        <%= link_to t("account.invitations"), new_user_invitation_path, class: "list-group-item" %>
        <%= link_to t("account.password"), edit_user_registration_path(current_user), class: "list-group-item active" %>
       
    </ul>
  </div>

  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><%= t("account.modify_your_password") %></h4>
      </div>
      <div class="panel-body">
        <div class="col-md-5">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <b><%= t("account.current_password") %></b>
            <%= f.password_field :current_password, :placeholder => t("account.current_password_placeholder"), class: "form-control" %>
          </div>

          <div class="form-group">
            <b><%= t("account.new_password") %></b>
            <%= f.password_field :password, :placeholder => t("account.new_password_placeholder"), class: "form-control", :autocomplete => "off" %>
          </div>

          <div class="form-group">
            <b><%= t("account.confirm_new_password") %></b>
            <%= f.password_field :password_confirmation, :placeholder => t("account.new_password_placeholder"), class: "form-control" %>
          </div>

          

          <div><%= f.submit "Modifier le mot de passe", class: "btn btn-primary" %></div>
        <% end %>
      </div>
      </div>
    </div>
 
