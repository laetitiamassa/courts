<p id="notice"><%= notice %></p>

<h1>Listing Locos</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Court</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locos.each do |loco| %>
      <tr>
        <td><%= loco.user_id %></td>
        <td><%= loco.court_id %></td>
        <td><%= link_to 'Show', loco %></td>
        <td><%= link_to 'Edit', edit_loco_path(loco) %></td>
        <td><%= link_to 'Destroy', loco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

