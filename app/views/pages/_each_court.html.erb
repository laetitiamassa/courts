<li class="list-group-item">
						<div class="row">
						  <div class="col-md-2 center">
					        <small><%= l court.date_display, :format => '%A' %></small>
					        <br><span class="big"><i><%= l court.date_display, :format => ('%e') %></i></span> 
					        <br><b><%= l court.date_display, :format => ('%B') %> 
					        <br><small> <%= l court.date_display, :format => ('%H:%M') %></small></b> 
					      </div>

						<div class="col-md-7">
					        <div class="header">
					          <span class="biggy">
					          	<%= link_to court.jurisdiction, court_path(court) %>
					          </span> 
					          <br>
					          <span class="fa fa-map-marker"> <%= t("bars.#{court.bar}") %></span>
        					  <br>
        					  <%= link_to court.performance, court %> 
					          
					            
					          <div class="text-right">
					          	<% if court.user == current_user %>
							        <%= link_to t("courts.button_edit"), edit_court_path(court),:class=> 'btn btn-info btn-xs' -%>
							        <% if court.have_found %>
							          <%= link_to t("courts.button_found"), court, :class=> 'btn btn-warning btn-xs', :disabled=> 'disabled' %>
							          <% end %>
							      
							      <% else %>
							        
							          <% if court.have_found %>
							            <%= link_to t("courts.button_found"), court,:class=> 'btn btn-warning btn-xs', :disabled => 'disabled' %>
							          <% else %>
							            
							              <% if (current_user.responses && court.responses).any? %>
							              	
							                
							                <% if court.locos.any? && current_user.id == court.locos.last.user.id %>
							                  <span class="label label-info no-bold">Vous intervenez loco</span> 
							                <% else %>
							                	<span class="label label-info no-bold">Vous avez r√©pondu</span>
							                <% end %>
							                
							              
							              
							            <% else %>
							              <%= form_for(@response) do |f| %> 
							                  <%= f.hidden_field :court_id, :value => court.id %>
							                  <button type="submit" class="btn btn-primary btn-sm">
							                    <%= content_tag(:i, " " , :class=> 'fa fa-ok') -%>  
							                    Proposer mes services
							                  </button>
							              <% end %>
							            <% end %>

							          <% end %>
							        
							      <% end %>
					          </div>  
					        </div>
					    </div>
					    <div class="col-md-3 text-right">
						<%= image_tag (court.user.avatar.url(:mini)), class: "img-rounded" %>
						<br><i>loco Me <%= link_to court.user.last_name_or_placeholder, user_path(court.user) %></i>
						</div>
						
						</div>
					</li>