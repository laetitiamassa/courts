<h2 class="page-header"><%= t("users.modify_your_profile") %></h2>
<div class="row">
<div class="col-md-3">
    <ul class="list-group">
        <%= link_to t("users.you"), edit_user_path(current_user), class: "list-group-item active" %>
        <%= link_to t("users.your_coordonnees"), edit_coordonnees_path, class: "list-group-item" %>
        <%= link_to t("users.your_activity"), edit_activity_path, class: "list-group-item" %>
        <!--<%= link_to t("users.your_prefered_areas"), prefered_areas_path, class: "list-group-item" %> -->
    </ul>
</div>

<div class="col-md-9">

<%= form_for @user, :url => user_path(@user), :html => { :method => :put } do |f| %>

		<!-- vous -->
		<div class="panel panel-default">
			<div class="panel-body">
				<h2 class="text-right higher-up page-header"><small><%= t("users.you") %></small></h2>
				
				<div class="row upper-padding">

					<div class="col-md-2 text-center">
					<%= image_tag (current_user.avatar.url(:mini)), class: "img-rounded" %>
					<br>
					</div>

					<div class="col-md-10">
						<%= t("users.modify_your_picture") %>
						<%= f.file_field :avatar, class: "form-control input-sm" %>
					</div>
				</div>

				<div class="form-group">
				<%= f.text_field :last_name, class: "form-control input-sm", :placeholder => t("users.your_name") %>
				</div>
				
				<div class="form-group">
					<%= f.text_field :first_name, class: "form-control input-sm", :placeholder => t("users.your_first_name") %>
				</div>
				
				<div class="form-group">
					<%= t("users.your_bar") %>
					<%= f.select :bar, @bars, {:include_blank => true}, {class: "form-control input-sm"} %>  
				</div>
<%= f.submit t("helpers.submit.update"), class: "btn btn-primary pull-right" %>
			</div>
		</div>
<% end %>
</div>
</div>
